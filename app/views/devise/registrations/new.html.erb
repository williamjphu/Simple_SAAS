<div class="row">
	<div class="col-md-6 col-md-offset-3 text-center"> 
		<% if params[:plan] == '2' %>
			<h1>Pro Account</h1>
			<p> Sign up for a pro account for $10/month to get FULL access to the webpage. </p>
		<% else %>
			<h1>Basic Account</h1>
			<p> Sign up for a free and basic access to the webpage. </p>
		<% end %>
	</div>

  	<div class="col-md-6 col-md-offset-3 col-xs-6">
		<div class="well">
		  <h2>Sign up</h2>
		  <% if params[:plan] == '1' %>
		  	<%= render "basic_form" %>
		  <% else %>
		  	<%= render "pro_form" %>
		  <% end %>

		  <%= render "devise/shared/links" %>
		</div>
 	</div>
</div>